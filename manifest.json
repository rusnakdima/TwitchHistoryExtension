{
  "manifest_version": 3,
  "name": "Twitch History Extension",
  "version": "1.0",
  "description": "Track and view your Twitch channel browsing history.",
  "permissions": ["storage", "tabs"],
  "content_scripts": [
    {
      "matches": ["*://*.twitch.tv/*"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Twitch History"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "twitch-history@zen-browser",
      "strict_min_version": "109.0"
    }
  },
  "icons": {
    "16": "favicon.png",
    "32": "favicon.png",
    "48": "favicon.png",
    "128": "favicon.png"
  }
}
